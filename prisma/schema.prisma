generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// This file was generated by prisma-merge-schema (https://www.npmjs.com/package/prisma-merge-schema)

model Person {
  id             String    @id @default(uuid())
  identification String?   @unique
  firstName      String?
  lastName       String?
  middleName     String? // opcional
  phone          String?
  address        String?
  city           String? // localidad o ciudad
  state          String? // estado o provincia
  country        String? // país
  postalCode     String? // código postal
  gender         String? // "M", "F", "Other", etc.
  birthDate      DateTime? // fecha de nacimiento
  nationality    String? // nacionalidad
  email          String?   @unique
  additionalInfo Json? // información adicional flexible, puede ser cualquier dato extra
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relaciones con entidades específicas
  user    User?
  student Student?
  teacher Teacher?
}

model User {
  id              String    @id @default(uuid())
  email           String    @unique
  username        String?   @unique
  passwordHash    String
  avatar          String    @default("https://api.dicebear.com/7.x/initials/svg?seed=Juan%20Perez")
  verifiedEmail   Boolean   @default(false)
  emailVerifiedAt DateTime?
  isActive        Boolean   @default(true)
  failedLogins    Int       @default(0)
  lockedUntil     DateTime?
  lastLoginAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  deletedAt       DateTime?

  roles Role[] @relation("UserRoles")

  school            School?            @relation("SchoolAdmin")
  tokens            Token[]            @relation("UserTokens") // Usuario puede tener muchos tokens
  userSubscriptions UserSubscription[]

  personId String?   @unique
  person   Person?   @relation(fields: [personId], references: [id])
  teachers Teacher[]
}

model School {
  id            String    @id @default(uuid())
  name          String
  code          String?   @unique // Código único de la escuela
  type          String
  establishedAt DateTime? // Fecha de fundación
  email         String?   @unique
  phone         String?
  address       String?
  city          String?
  state         String?
  country       String?
  postalCode    String?
  website       String?
  logoUrl       String?

  enrollmennts Enrollment[]

  teachers Teacher[] @relation("TeachersOfSchool")
  students Student[]
  groups   Group[]

  grades Grade[]

  subjects    Subject[] // Una escuela tiene muchas materias
  principal   User?     @relation("SchoolAdmin", fields: [principalId], references: [id])
  principalId String?   @unique

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  classrooms Classroom[]
  periods    Period[]
}

model Enrollment {
  id          String @id @default(uuid())
  studentId   String
  schoolId    String
  groupId     String
  anioLectivo Int

  status     String    @default("ACTIVE")
  enrolledAt DateTime  @default(now())
  endedAt    DateTime?

  student Student @relation(fields: [studentId], references: [id])
  school  School  @relation(fields: [schoolId], references: [id])
  group   Group   @relation(fields: [groupId], references: [id])

  @@unique([studentId, anioLectivo])
}

model Student {
  id               String    @id @default(uuid())
  enrollmentNumber String    @unique
  gradeLevel       String?
  section          String?
  status           String    @default("ACTIVE")
  enrollmentDate   DateTime  @default(now())
  graduationDate   DateTime?

  enrollments Enrollment[]

  personId String @unique
  person   Person @relation(fields: [personId], references: [id])

  school   School? @relation(fields: [schoolId], references: [id])
  schoolId String?

  group   Group?  @relation(fields: [groupId], references: [id])
  groupId String?

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  attendances  Attendance[]
  gradeRecords GradeRecord[]
}

model SubjectTeacherGroup {
  id          String @id @default(uuid())
  teacherId   String
  subjectId   String
  groupId     String
  anioLectivo Int

  teacher Teacher @relation(fields: [teacherId], references: [id])
  subject Subject @relation(fields: [subjectId], references: [id])
  group   Group   @relation(fields: [groupId], references: [id])

  createdAt DateTime @default(now())

  @@unique([teacherId, subjectId, groupId, anioLectivo])
}

model Classroom {
  id        String  @id @default(uuid())
  name      String // Ej: "Aula 101", "Laboratorio de química"
  capacity  Int?
  resources String?

  school   School @relation(fields: [schoolId], references: [id])
  schoolId String

  schedules Schedule[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Schedule {
  id        String   @id @default(uuid())
  date      DateTime
  startTime DateTime
  endTime   DateTime

  teacher   Teacher @relation(fields: [teacherId], references: [id])
  teacherId String

  group   Group  @relation(fields: [groupId], references: [id])
  groupId String

  classroom   Classroom @relation(fields: [classroomId], references: [id])
  classroomId String

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  attendances Attendance[]

  @@unique([classroomId, date, startTime, endTime]) // evita conflictos de aula
  @@unique([teacherId, date, startTime, endTime]) // evita conflictos de docente
}

model GradeRecord {
  id           String     @id @default(uuid())
  evaluation   Evaluation @relation(fields: [evaluationId], references: [id])
  evaluationId String

  student   Student @relation(fields: [studentId], references: [id])
  studentId String

  score Float // Nota obtenida
  notes String? // Comentarios del docente

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([evaluationId, studentId]) // Un estudiante solo una nota por evaluación
}

model Evaluation {
  id     String   @id @default(uuid())
  name   String
  type   String // EXAM, HOMEWORK, PARTICIPATION
  weight Float?
  date   DateTime

  subject   Subject @relation(fields: [subjectId], references: [id])
  subjectId String

  group   Group  @relation(fields: [groupId], references: [id])
  groupId String

  teacher   Teacher @relation(fields: [teacherId], references: [id])
  teacherId String

  period   Period @relation(fields: [periodId], references: [id])
  periodId String

  grades    GradeRecord[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model Period {
  id        String   @id @default(uuid())
  name      String // Ej: "Primer Trimestre", "Semestre 1"
  startDate DateTime
  endDate   DateTime
  school    School   @relation(fields: [schoolId], references: [id])
  schoolId  String

  evaluations Evaluation[] // Todas las evaluaciones de este periodo
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Attendance {
  id         String   @id @default(uuid())
  schedule   Schedule @relation(fields: [scheduleId], references: [id])
  scheduleId String

  student   Student @relation(fields: [studentId], references: [id])
  studentId String

  status String  @default("PRESENT") // PRESENT, ABSENT, LATE, EXCUSED
  notes  String? // observaciones opcionales

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([scheduleId, studentId]) // un estudiante solo una asistencia por clase
}

model Teacher {
  id              String    @id @default(uuid())
  employeeNumber  String    @unique // número de empleado o ID interno del docente
  specialization  String? // materia o área de especialidad
  status          String    @default("ACTIVE") // ACTIVE, INACTIVE, SUSPENDED, RETIRED
  hireDate        DateTime  @default(now())
  terminationDate DateTime?

  personId String @unique
  person   Person @relation(fields: [personId], references: [id])

  school   School? @relation("TeachersOfSchool", fields: [schoolId], references: [id])
  schoolId String?

  user User? @relation(fields: [userId], references: [id]) // cuenta en el sistema si aplica

  group   Group?  @relation(fields: [groupId], references: [id])
  groupId String?

  subjects Subject[] @relation("TeacherSubject") // Muchos a muchos con Subject

  subjectTeacherGroups SubjectTeacherGroup[]

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  userId      String?
  schedules   Schedule[]
  evaluations Evaluation[]
}

model Subject {
  id          String  @id @default(uuid())
  name        String // nombre de la materia, ej: "Matemáticas"
  code        String? @unique // código de materia opcional, ej: "MAT101"
  description String? // descripción opcional
  status      String  @default("ACTIVE") // ACTIVE, INACTIVE, ARCHIVED

  school   School? @relation(fields: [schoolId], references: [id])
  schoolId String?

  subjectTeacherGroups SubjectTeacherGroup[]

  teachers Teacher[] @relation("TeacherSubject")
  groups   Group[]   @relation("GroupSubjects") // grupos donde se imparte

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  evaluations Evaluation[]
}

model Group {
  id         String @id @default(uuid())
  name       String // nombre del grupo, ej: "3A", "Primero B"
  gradeLevel String // nivel o grado académico, ej: "Primaria 3", "Secundaria 1"
  status     String @default("ACTIVE") // ACTIVE, INACTIVE, CLOSED

  teachers Teacher[]
  students Student[]

  subjects Subject[] @relation("GroupSubjects") // Muchos a muchos con Subject

  school   School? @relation(fields: [schoolId], references: [id])
  schoolId String?

  SubjectTeacherGroups SubjectTeacherGroup[]

  grade   Grade?  @relation(fields: [gradeId], references: [id])
  gradeId String?

  enrollments Enrollment[]

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  schedules   Schedule[]
  evaluations Evaluation[]
}

model Grade {
  id       String  @id @default(uuid())
  name     String
  school   School? @relation(fields: [schoolId], references: [id])
  schoolId String?

  groups Group[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Permission {
  id   String      @id @default(uuid())
  name EPermission @unique

  roles Role[] @relation("RolePermissions")
}

model Role {
  id          String       @id @default(uuid())
  name        String       @unique
  permissions Permission[] @relation("RolePermissions")
  users       User[]       @relation("UserRoles")
}

//////tokens

model Token {
  id    String @id @default(uuid())
  token String
  type  String

  userId    String
  user      User     @relation("UserTokens", fields: [userId], references: [id])
  expiresAt DateTime

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

//subbscriptins

enum PlanTerms {
  DAILY
  WEEKLY
  MONTHLY
  FRTNIGHTLY
  YEARLY
}

model Plan {
  id            String             @id @default(uuid())
  name          String
  description   String
  price         Decimal            @default(5.00) @db.Decimal(10, 2)
  currency      String             @default("USD")
  term          PlanTerms          @default(MONTHLY)
  periodDays    Int
  isLifetime    Boolean            @default(false)
  isRecurring   Boolean            @default(true)
  trialDays     Int?               @default(0)
  maxDevices    Int                @default(1)
  maxProjects   Int?
  maxRequests   Int?               @default(2000)
  popularity    Int                @default(0)
  isActive      Boolean            @default(true)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  subscriptions UserSubscription[]
  features      String[]
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  SUSPENDED
  CANCELLED
}

model UserSubscription {
  id           String             @id @default(uuid())
  userId       String
  planId       String
  licenceKeyId String
  startsAt     DateTime
  expiresAt    DateTime
  status       SubscriptionStatus @default(ACTIVE)

  isAutoRenew Boolean   @default(false)
  renewedAt   DateTime?

  lastUsedAt DateTime?

  paymentProvider String?
  paymentRef      String?

  revokedAt    DateTime?
  revokeReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  plan Plan @relation(fields: [planId], references: [id])

  @@index([userId])
  @@index([status])
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
}

model Media {
  id           String    @id @default(uuid())
  thumbnailUrl String?
  type         MediaType
  url          String
  filename     String?
  mimeType     String?
  size         Int?
  width        Int?
  isPublic     Boolean   @default(true)
  height       Int?
  order        Int       @default(0)
  provider     String?
  isPrimary    Boolean   @default(false)
  createdAt    DateTime  @default(now())
}

model Total {
  id    String @id @default(uuid())
  users Int    @default(0)
}

