generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// This file was generated by prisma-merge-schema (https://www.npmjs.com/package/prisma-merge-schema)

model Person {
  id             Int       @id @default(autoincrement())
  identification String    @unique
  firstName      String
  lastName       String
  middleName     String? // opcional
  email          String?   @unique
  phone          String?
  address        String?
  city           String? // localidad o ciudad
  state          String? // estado o provincia
  country        String? // país
  postalCode     String? // código postal
  gender         String? // "M", "F", "Other", etc.
  birthDate      DateTime? // fecha de nacimiento
  nationality    String? // nacionalidad

  additionalInfo Json? // información adicional flexible, puede ser cualquier dato extra
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relaciones con entidades específicas

  user    User?
  student Student?
  teacher Teacher?
}

model User {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  username        String?   @unique
  passwordHash    String
  avatar          String    @default("https://api.dicebear.com/7.x/initials/svg?seed=Juan%20Perez")
  verifiedEmail   Boolean   @default(false)
  emailVerifiedAt DateTime?
  isActive        Boolean   @default(true)
  failedLogins    Int       @default(0)
  lockedUntil     DateTime?
  lastLoginAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  deletedAt       DateTime?

  roles Role[] @relation("UserRoles")

  school            School?            @relation("SchoolAdmin")
   tokens    Token[] @relation("UserTokens") // Usuario puede tener muchos tokens
  userSubscriptions UserSubscription[]

  personId Int       @unique
  person   Person    @relation(fields: [personId], references: [id])
  teachers Teacher[]
}

model School {
  id            Int       @id @default(autoincrement())
  name          String
  code          String?   @unique // Código único de la escuela
  type          String
  establishedAt DateTime? // Fecha de fundación
  email         String?   @unique
  phone         String?
  address       String?
  city          String?
  state         String?
  country       String?
  postalCode    String?
  website       String?
  logoUrl       String?

  teachers Teacher[] @relation("TeachersOfSchool")
  students Student[]
  groups   Group[]

  subjects    Subject[] // Una escuela tiene muchas materias
  principal   User?     @relation("SchoolAdmin", fields: [principalId], references: [id])
  principalId Int?      @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Student {
  id       Int    @id @default(autoincrement())
  personId Int    @unique
  person   Person @relation(fields: [personId], references: [id])

  enrollmentNumber String    @unique
  gradeLevel       String?
  section          String?
  status           String    @default("ACTIVE")
  enrollmentDate   DateTime  @default(now())
  graduationDate   DateTime?

  school   School? @relation(fields: [schoolId], references: [id])
  schoolId Int?

  group   Group? @relation(fields: [groupId], references: [id])
  groupId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Teacher {
  id       Int    @id @default(autoincrement())
  personId Int    @unique
  person   Person @relation(fields: [personId], references: [id])

  employeeNumber  String    @unique // número de empleado o ID interno del docente
  specialization  String? // materia o área de especialidad
  status          String    @default("ACTIVE") // ACTIVE, INACTIVE, SUSPENDED, RETIRED
  hireDate        DateTime  @default(now())
  terminationDate DateTime?

  school   School? @relation("TeachersOfSchool", fields: [schoolId], references: [id])
  schoolId Int?

  user User? @relation(fields: [userId], references: [id]) // cuenta en el sistema si aplica

  group   Group? @relation(fields: [groupId], references: [id])
  groupId Int?

  subjects Subject[] @relation("TeacherSubject") // Muchos a muchos con Subject

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int?
}

model Subject {
  id          Int     @id @default(autoincrement())
  name        String // nombre de la materia, ej: "Matemáticas"
  code        String? @unique // código de materia opcional, ej: "MAT101"
  description String? // descripción opcional
  status      String  @default("ACTIVE") // ACTIVE, INACTIVE, ARCHIVED

  school   School? @relation(fields: [schoolId], references: [id])
  schoolId Int?

  teachers Teacher[] @relation("TeacherSubject")
  groups   Group[]   @relation("GroupSubjects") // grupos donde se imparte

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Group {
  id         Int    @id @default(autoincrement())
  name       String // nombre del grupo, ej: "3A", "Primero B"
  gradeLevel String // nivel o grado académico, ej: "Primaria 3", "Secundaria 1"
  status     String @default("ACTIVE") // ACTIVE, INACTIVE, CLOSED

  teachers Teacher[]
  students Student[]

  subjects Subject[] @relation("GroupSubjects") // Muchos a muchos con Subject

  school   School? @relation(fields: [schoolId], references: [id])
  schoolId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Permission {
  id   Int         @id @default(autoincrement())
  name EPermission @unique

  roles Role[] @relation("RolePermissions")
}

model Role {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  permissions Permission[] @relation("RolePermissions")
  users       User[]       @relation("UserRoles")
}

model LicenceKey {
  id            Int                @id @default(autoincrement())
  key           String
  subscriptions UserSubscription[]
}

enum PlanTerms {
  DAILY
  WEEKLY
  MONTHLY
  FRTNIGHTLY
  YEARLY
}

//////tokens

model Token {
  id    Int    @id @default(autoincrement())
  token String
  type  String
    
    userId Int
  user     User   @relation("UserTokens",fields: [userId], references: [id])
  expiresAt DateTime

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

/////////subscripciones
model Plan {
  id            Int                @id @default(autoincrement())
  name          String
  description   String
  price         Decimal            @default(5.00) @db.Decimal(10, 2)
  currency      String             @default("USD")
  term          PlanTerms          @default(MONTHLY)
  periodDays    Int
  isLifetime    Boolean            @default(false)
  isRecurring   Boolean            @default(true)
  trialDays     Int?               @default(0)
  maxDevices    Int                @default(1)
  maxProjects   Int?
  maxRequests   Int?               @default(2000)
  popularity    Int                @default(0)
  isActive      Boolean            @default(true)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  subscriptions UserSubscription[]
  features      Feature[]
}

model SubscriptionDevice {
  id                 Int       @id @default(autoincrement())
  userSubscriptionId Int
  hardwareId         String
  deviceName         String?
  lastUsedAt         DateTime?
  isActive           Boolean   @default(true)
  createdAt          DateTime  @default(now())

  subscription UserSubscription @relation(fields: [userSubscriptionId], references: [id])

  @@unique([userSubscriptionId, hardwareId])
  @@index([hardwareId])
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  SUSPENDED
  CANCELLED
}

model UserSubscription {
  id           Int                @id @default(autoincrement())
  userId       Int
  planId       Int
  licenceKeyId Int
  startsAt     DateTime
  expiresAt    DateTime
  status       SubscriptionStatus @default(ACTIVE)

  isAutoRenew Boolean   @default(false)
  renewedAt   DateTime?

  maxDevices Int       @default(1)
  lastUsedAt DateTime?

  paymentProvider String?
  paymentRef      String?

  revokedAt    DateTime?
  revokeReason String?
  devices      SubscriptionDevice[]
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt

  user       User       @relation(fields: [userId], references: [id])
  plan       Plan       @relation(fields: [planId], references: [id])
  licenceKey LicenceKey @relation(fields: [licenceKeyId], references: [id])

  @@index([userId])
  @@index([status])
}

model Feature {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  media       String[]

  plans Plan[]
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
}

model Media {
  id           Int       @id @default(autoincrement())
  thumbnailUrl String?
  type         MediaType
  url          String
  filename     String?
  mimeType     String?
  size         Int?
  width        Int?
  isPublic     Boolean   @default(true)
  height       Int?
  order        Int       @default(0)
  provider     String?
  isPrimary    Boolean   @default(false)
  createdAt    DateTime  @default(now())
}

model Total {
  id    Int @id @default(autoincrement())
  users Int @default(0)
}

enum EPermission {
  USER_CREATE
  USER_EDIT
  USER_GET
  USER_DELETE

  GROUP_CREATE
  GROUP_EDIT
  GROUP_GET
  GROUP_DELETE

  TEACHER_CREATE
  TEACHER_EDIT
  TEACHER_GET
  TEACHER_DELETE

  STUDENT_CREATE
  STUDENT_EDIT
  STUDENT_GET
  STUDENT_DELETE

  SCHEDULE_CREATE
  SCHEDULE_EDIT
  SCHEDULE_GET
  SCHEDULE_DELETE

  SUBJECT_CREATE
  SUBJECT_EDIT
  SUBJECT_GET
  SUBJECT_DELETE

  EVENT_CREATE
  EVENT_EDIT
  EVENT_GET
  EVENT_DELETE

  PARENT_CREATE
  PARENT_EDIT
  PARENT_GET
  PARENT_DELETE
}
