generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// This file was generated by prisma-merge-schema (https://www.npmjs.com/package/prisma-merge-schema)

model Person {
  id             String    @id @default(uuid())
  identification String    @unique
  firstName      String
  lastName       String
  middleName     String? // opcional
  email          String?   @unique
  phone          String?
  address        String?
  city           String? // localidad o ciudad
  state          String? // estado o provincia
  country        String? // país
  postalCode     String? // código postal
  gender         String? // "M", "F", "Other", etc.
  birthDate      DateTime? // fecha de nacimiento
  nationality    String? // nacionalidad

  additionalInfo Json? // información adicional flexible, puede ser cualquier dato extra
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relaciones con entidades específicas

  user    User?
  student Student?
  teacher Teacher?
  tutor   Tutor?
}

model Tutor {
  id       String @id @default(uuid())
  personId String @unique
  person   Person @relation(fields: [personId], references: [id])

  students Student[] @relation("TutorStudent")
}

model User {
  id              String    @id @default(uuid())
  username        String?   @unique
  passwordHash    String
  avatar          String    @default("https://api.dicebear.com/7.x/initials/svg?seed=Juan%20Perez")
  email           String    @unique
  verifiedEmail   Boolean   @default(false)
  emailVerifiedAt DateTime?
  isActive        Boolean   @default(true)
  failedLogins    Int       @default(0)
  lockedUntil     DateTime?
  lastLoginAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  deletedAt       DateTime?

  roles Role[] @relation("UserRole")

  school School?        @relation("SchoolAdmin")
  tokens SessionToken[] @relation("UserToken") // Usuario puede tener muchos tokens

  personId String    @unique
  person   Person    @relation(fields: [personId], references: [id])
  teachers Teacher[]
}

model School {
  id            String    @id @default(uuid())
  name          String
  code          String?   @unique // Código único de la escuela
  type          String
  establishedAt DateTime? // Fecha de fundación
  email         String?   @unique
  phone         String?
  address       String?
  city          String?
  state         String?
  country       String?
  postalCode    String?
  website       String?
  logoUrl       String?

  teachers Teacher[] @relation("TeachersOfSchool")
  students Student[]
  groups   Group[]

  subjects Subject[] // Una escuela tiene muchas materias

  principal   User?   @relation("SchoolAdmin", fields: [principalId], references: [id])
  principalId String? @unique

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  academicPeriods AcademicPeriod[]
  classRooms      ClassRoom[]
}

model Student {
  id       String @id @default(uuid())
  personId String @unique
  person   Person @relation(fields: [personId], references: [id])

  enrollmentNumber String    @unique
  gradeLevel       String?
  section          String?
  status           String    @default("ACTIVE")
  enrollmentDate   DateTime  @default(now())
  graduationDate   DateTime?

  school   School? @relation(fields: [schoolId], references: [id])
  schoolId String?

  group   Group?  @relation(fields: [groupId], references: [id])
  groupId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tutor Tutor[] @relation("TutorStudent")
}

model Specialization {
  id                     String                  @id @default(uuid())
  name                   String                  @unique
  teacherSpecializations TeacherSpecialization[]
}

model TeacherSpecialization {
  teacherId        String
  specializationId String
  obtainerAt       DateTime

  teacher        Teacher        @relation(fields: [teacherId], references: [id])
  specialization Specialization @relation(fields: [specializationId], references: [id])

  @@id([teacherId, specializationId])
}

model Schedule {
  id String @id @default(uuid())

  academicPeriodId String
  academicPeriod   AcademicPeriod @relation(fields: [academicPeriodId], references: [id])

  teacherId String
  teacher   Teacher @relation(fields: [teacherId], references: [id])

  groupId   String
  subjectId String

  groupSubject GroupSubject @relation(fields: [groupId, subjectId], references: [groupId, subjectId])

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model AcademicPeriod {
  id String @id @default(uuid())

  name String @unique

  status String @default("ACTIVE")

  startDate DateTime
  endDate   DateTime

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  schoolId  String
  school    School     @relation(fields: [schoolId], references: [id])
  schedules Schedule[]
}

model ClassRoom {
  id String @id @default(uuid())

  name String @unique

  status String @default("ACTIVE")

  capacity Int

  resources String

  description String

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  schoolId String
  school   School @relation(fields: [schoolId], references: [id])
}

model Teacher {
  id String @id @default(uuid())

  person   Person @relation(fields: [personId], references: [id])
  personId String @unique

  employeeNumber String @unique // número de empleado o ID interno del docente

  teacherSpecializations TeacherSpecialization[]

  status          String    @default("ACTIVE") // ACTIVE, INACTIVE, SUSPENDED, RETIRED
  hireDate        DateTime  @default(now())
  terminationDate DateTime?

  school   School? @relation("TeachersOfSchool", fields: [schoolId], references: [id])
  schoolId String?

  user User? @relation(fields: [userId], references: [id]) // cuenta en el sistema si aplica

  group   Group?  @relation(fields: [groupId], references: [id])
  groupId String?

  subjects Subject[] @relation("TeacherSubject") // Muchos a muchos con Subject

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  userId    String?
  schedules Schedule[]
}

model Subject {
  id          String  @id @default(uuid())
  name        String // nombre de la materia, ej: "Matemáticas"
  code        String? @unique // código de materia opcional, ej: "MAT101"
  description String? // descripción opcional
  status      String  @default("ACTIVE") // ACTIVE, INACTIVE, ARCHIVED

  school   School? @relation(fields: [schoolId], references: [id])
  schoolId String?

  teachers Teacher[] @relation("TeacherSubject")
  groups   Group[] // grupos donde se imparte

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  groupSubjects GroupSubject[]
}

model Group {
  id         String @id @default(uuid())
  name       String // nombre del grupo, ej: "3A", "Primero B"
  gradeLevel String // nivel o grado académico, ej: "Primaria 3", "Secundaria 1"
  status     String @default("ACTIVE") // ACTIVE, INACTIVE, CLOSED

  teachers Teacher[]
  students Student[]

  subjects Subject[] // Muchos a muchos con Subject

  school   School? @relation(fields: [schoolId], references: [id])
  schoolId String?

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  groupSubjects GroupSubject[]
}

model Permission {
  id   String      @id @default(uuid())
  name EPermission @unique

  roles Role[] @relation("RolePermission")
}

model GroupSubject {
  groupId   String
  subjectId String

  group   Group   @relation(fields: [groupId], references: [id])
  subject Subject @relation(fields: [subjectId], references: [id])

  schedule Schedule[]

  @@id([groupId, subjectId])
}

model Role {
  id          String       @id @default(uuid())
  name        String       @unique
  permissions Permission[] @relation("RolePermission")
  users       User[]       @relation("UserRole")
}

enum PlanTerms {
  DAILY
  WEEKLY
  MONTHLY
  FRTNIGHTLY
  YEARLY
}

//////tokens

model SessionToken {
  id    String @id @default(uuid())
  token String
  type  String

  userId    String
  user      User     @relation("UserToken", fields: [userId], references: [id])
  expiresAt DateTime

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@map("Token")
}

/////////subscripciones
model Plan {
  id          String    @id @default(uuid())
  name        String
  description String
  price       Decimal   @default(5.00) @db.Decimal(10, 2)
  currency    String    @default("USD")
  term        PlanTerms @default(MONTHLY)
  periodDays  Int
  isLifetime  Boolean   @default(false)
  isRecurring Boolean   @default(true)
  trialDays   Int?      @default(0)
  maxDevices  Int       @default(1)
  maxProjects Int?
  maxRequests Int?      @default(2000)
  popularity  Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
}

model Media {
  id           String    @id @default(uuid())
  thumbnailUrl String?
  type         MediaType
  url          String
  filename     String?
  mimeType     String?
  size         Int?
  width        Int?
  isPublic     Boolean   @default(true)
  height       Int?
  order        Int       @default(0)
  provider     String?
  isPrimary    Boolean   @default(false)
  createdAt    DateTime  @default(now())
}

enum EPermission {
  USER_CREATE
  USER_EDIT
  USER_GET
  USER_DELETE

  GROUP_CREATE
  GROUP_EDIT
  GROUP_GET
  GROUP_DELETE

  TEACHER_CREATE
  TEACHER_EDIT
  TEACHER_GET
  TEACHER_DELETE

  STUDENT_CREATE
  STUDENT_EDIT
  STUDENT_GET
  STUDENT_DELETE

  SCHEDULE_CREATE
  SCHEDULE_EDIT
  SCHEDULE_GET
  SCHEDULE_DELETE

  SUBJECT_CREATE
  SUBJECT_EDIT
  SUBJECT_GET
  SUBJECT_DELETE

  EVENT_CREATE
  EVENT_EDIT
  EVENT_GET
  EVENT_DELETE

  TUTOR_CREATE
  TUTOR_EDIT
  TUTOR_GET
  TUTOR_DELETE
}
