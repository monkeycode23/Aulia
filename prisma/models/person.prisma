model Person {
  id         Int     @id @default(autoincrement())
  firstName  String
  lastName   String
  phone      String?
  address    String?
  email      String? @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relaciones con entidades espec√≠ficas
  student    Student?
  teacher    Teacher?
  admin      Admin?
  director   Director?
}