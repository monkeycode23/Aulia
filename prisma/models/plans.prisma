enum PlanTerms {
  DAILY
  WEEKLY
  MONTHLY
  FRTNIGHTLY
  YEARLY
}

model Plan {
  id            Int                @id @default(autoincrement())
  name          String
  description   String
  price         Decimal            @db.Decimal(10, 2) @default(5.00)
  currency      String             @default("USD")
  term          PlanTerms          @default(MONTHLY)
  periodDays    Int
  isLifetime    Boolean            @default(false)
  isRecurring   Boolean            @default(true)
  trialDays     Int?                @default(0)
  maxDevices    Int                @default(1)
  maxProjects   Int?
  maxRequests   Int?                @default(2000)
  popularity    Int                @default(0)
  isActive      Boolean            @default(true)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  subscriptions UserSubscription[]
  features      Feature[]
  media         PlanMedia[]
}


model UserSubscription {
  id           Int                @id @default(autoincrement())
  userId       Int
  planId       Int
  licenceKeyId Int
  startsAt     DateTime
  expiresAt    DateTime
  status       SubscriptionStatus @default(ACTIVE)

  isAutoRenew Boolean   @default(false)
  renewedAt   DateTime?

  
  maxDevices Int       @default(1)
  lastUsedAt DateTime?

  paymentProvider String?
  paymentRef      String?

  revokedAt    DateTime?
  revokeReason String?
  devices SubscriptionDevice[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User       @relation(fields: [userId], references: [id])
  plan       Plan       @relation(fields: [planId], references: [id])
  licenceKey LicenceKey @relation(fields: [licenceKeyId], references: [id])

  @@index([userId])
  @@index([status])
}